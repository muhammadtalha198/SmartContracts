        if(_betOn == 0){

            userShares = calculateShares(_amount,_betOn);
            
            userInfo[_user].noBetAmount += _amount;
            userInfo[_user].noShareAmount += userShares;
            
            marketInfo[address(this)].totalNoBets++;
            marketInfo[address(this)].totalBetAmountOnNo += _amount;

