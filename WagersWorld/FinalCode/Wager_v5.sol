        address _user, 
        address _owner, 
        uint256 _buyListNo
    )  
        validAddress(_user,_owner)
        
    public {


        if(_buyListNo == 0){
            revert wrongListNo(_buyListNo);
        }

        allowance[_user][_owner].buyListNo = _buyListNo;
        
        emit AllowanceForBuy(
            _user,
            _owner,
            allowance[_user][_owner].buyListNo 
        );
