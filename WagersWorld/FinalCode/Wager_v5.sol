    public {

        if(_listId == 0){
            revert wrongListNo(_listId);
        }

        allowance[_user][_owner].cancelListId = _listId;
        
        emit CancelAllowanceForSell(
            _user,
            _owner,
            allowance[_user][_owner].cancelListId
            
        );
